{
  "name": "coin-flip-v2",
  "version": "1.0.0",
  "description": "CoinFlip DApp with VRF - Smart Contract and Frontend",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test test/zk/coinflip.zk.test.ts test/evm/coinflip.evm.test.ts --network inMemoryNode",
    "test:coverage": "SOLIDITY_COVERAGE=true hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test test/zk/coinflip.zk.test.ts test/evm/coinflip.evm.test.ts --network inMemoryNode",
    "test:zk:local": "hardhat test test/zk/coinflip.zk.test.ts --network inMemoryNode",
    "test:zk:abs": "hardhat test test/zk/coinflip.zk.test.ts --network abstractTestnet",
    "test:evm:sepolia": "hardhat test test/evm/coinflip.evm.test.ts --network sepolia",
    "test:evm:base-sepolia": "hardhat test test/evm/coinflip.evm.test.ts --network baseSepolia",
    "deploy": "hardhat run scripts/deploy-coinflip.ts --network inMemoryNode",
    "deploy:abs:testnet": "hardhat run scripts/deploy-coinflip.ts --network abstractTestnet",
    "deploy:abs:mainnet": "hardhat run scripts/deploy-coinflip.ts --network abstractMainnet",
    "deploy:evm:sepolia": "hardhat run scripts/deploy-coinflip.ts --network sepolia",
    "deploy:evm:mainnet": "hardhat run scripts/deploy-coinflip.ts --network mainnet",
    "deploy:evm:base-sepolia": "hardhat run scripts/deploy-coinflip.ts --network baseSepolia",
    "deploy:evm:base": "hardhat run scripts/deploy-coinflip.ts --network base",
    "deploy:evm:bsc-testnet": "hardhat run scripts/deploy-coinflip.ts --network bscTestnet",
    "deploy:evm:bsc": "hardhat run scripts/deploy-coinflip.ts --network bsc",
    "simulate": "hardhat run scripts/simulate.ts --network inMemoryNode",
    "console": "hardhat console --network inMemoryNode",
    "abi:sync": "hardhat run scripts/export-abi.ts --network inMemoryNode",
    "deployments:copy:local": "cp deployments/inMemoryNode.json src/deployments.localhost.json",
    "sync": "npm run abi:sync && npm run deployments:copy:local",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "keywords": [
    "blockchain",
    "coinflip",
    "vrf",
    "dapp",
    "hardhat",
    "react",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@abstract-foundation/agw-client": "^1.9.0",
    "@abstract-foundation/agw-react": "^1.9.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@tanstack/react-query": "^5.85.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "next": "^15.1.3",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "wagmi": "^2.16.9",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@matterlabs/hardhat-zksync": "^1.6.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/chai": "^4.3.20",
    "@types/node": "^22.17.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^2.26.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "viem": "^2.36.0",
    "zksync-ethers": "^6.21.0"
  },
  "type": "module"
}
